<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXPasswordField?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>


<AnchorPane nodeOrientation="RIGHT_TO_LEFT" prefHeight="200.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/10.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.ui.editPassword.EditPassword">
   <children>
      <VBox prefHeight="270.0" prefWidth="600.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <JFXPasswordField fx:id="currentPassword" promptText="كلمة المرور الحالية">
               <VBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </VBox.margin>
            </JFXPasswordField>
            <JFXPasswordField fx:id="newPassword" promptText="كلمة المرور الجديدة">
               <VBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </VBox.margin>
            </JFXPasswordField>
            <JFXPasswordField fx:id="confirmNewPassword" layoutX="20.0" layoutY="20.0" promptText="تاكيد كلمة المرور">
               <VBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </VBox.margin>
            </JFXPasswordField>
            <HBox prefHeight="100.0" prefWidth="200.0">
               <VBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </VBox.margin>
               <children>
                  <JFXButton onAction="#save" prefHeight="69.0" prefWidth="295.0" text="حفظ" />
                  <JFXButton layoutX="10.0" layoutY="10.0" onAction="#cancel" prefHeight="69.0" prefWidth="295.0" text="الغاء" />
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
</AnchorPane>
