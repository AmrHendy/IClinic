   <Button fx:id="submitButton" defaultButton="true" onMouseClicked="#handleSubmitButtonAction" prefHeight="40" prefWidth="100" text="تأكيد" textAlignment="CENTER" GridPane.columnSpan="2" GridPane.halignment="CENTER" GridPane.rowIndex="4" GridPane.rowSpan="1">
