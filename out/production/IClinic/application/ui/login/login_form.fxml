   <children>

   <!-- Add Header Label -->
   <Label text="تسجيل الدخول" textAlignment="CENTER" GridPane.columnSpan="2" GridPane.halignment="CENTER" GridPane.rowSpan="1">
       <font>
           <Font name="Arial" size="24" />
       </font>
       <GridPane.margin>
           <Insets bottom="20" left="0" right="0" top="20" />
       </GridPane.margin>
   </Label>



   <!-- Add Name Label -->
   <Label prefHeight="17.0" prefWidth="95.0" text="اسم المستخدم " textAlignment="RIGHT" GridPane.columnIndex="1" GridPane.rowIndex="1">
</Label>
   <!-- Add Name Text Field -->
   <TextField fx:id="nameField" prefHeight="40" GridPane.rowIndex="1" />

   <!-- Add Password Label -->
   <Label prefHeight="17.0" prefWidth="96.0" text="كلمة المرور    " textAlignment="RIGHT" GridPane.columnIndex="1" GridPane.rowIndex="3">
</Label>
